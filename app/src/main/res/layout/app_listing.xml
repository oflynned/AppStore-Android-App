<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <!-- top panel with app details and images -->
    <RelativeLayout
        android:id="@+id/app_listing_top_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/app_listing_icon"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <!-- details of app name, developer, category -->
    </RelativeLayout>

    <!-- control buttons for installation/update/removal -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_listing_top_panel">

        <Button
            android:id="@+id/app_listing_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Install" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/app_listing_top_panel"
        android:layout_toEndOf="@+id/app_listing_top_panel"
        android:layout_toRightOf="@+id/app_listing_top_panel">

        <TextView
            android:id="@+id/app_listing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="app_listing_title"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/app_listing_developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_listing_title"
            android:text="app listing developer"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

</RelativeLayout>